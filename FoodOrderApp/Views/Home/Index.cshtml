@model FoodOrderApp.Models.HomePageViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home Page</title>
</head>
<body>
<div style="background-image: url('/img/home-banner.png'); background-size: cover; background-position: center; width: 100%; height: 100vh; text-align: center; color: white; padding-top: 20px;">
    <img src="/img/logo.svg" alt="Logo" />
    <h1 class="main-title">KOD ACIKTIRIR <br /> PİZZA DOYURUR</h1>
    <button class="anasayfa-buton" data-cy="mainpage-button" onclick="location.href='@Url.Action("CreateOrder", "Cart")'">ACIKTIM</button>
</div>

<nav class="main-nav">
    <ul>
        <li><a asp-controller="Product" asp-action="Index" asp-route-categoryId="1"><img src="/img/icons/1.svg" alt="Kore" />YENİ! Kore</a></li>
        <li><a asp-controller="Product" asp-action="Index" asp-route-categoryId="2"><img src="/img/icons/2.svg" alt="Pizza" />Pizza</a></li>
        <li><a asp-controller="Product" asp-action="Index" asp-route-categoryId="3"><img src="/img/icons/3.svg" alt="Burger" />Burger</a></li>
        <li><a asp-controller="Product" asp-action="Index" asp-route-categoryId="4"><img src="/img/icons/4.svg" alt="Kızartmalar" />Kızartmalar</a></li>
        <li><a asp-controller="Product" asp-action="Index" asp-route-categoryId="5"><img src="/img/icons/5.svg" alt="Fast Food" />Fast Food</a></li>
        <li><a asp-controller="Product" asp-action="Index" asp-route-categoryId="6"><img src="/img/icons/6.svg" alt="Gazlı İçecek" />Gazlı İçecek</a></li>
    </ul>
</nav>

<main class="main-page">
    <section class="cards">
        <div class="card-1">
            <img src="/img/kart-1.png" alt="İlk Kart" />
            <div class="overlay-content">
                <h1 class="card-title">Özel <br /> Lezzetus</h1>
                <p class="card-text">Position Absolute Acı Pizza</p>
                <button onclick="location.href='@Url.Action("CreateOrder", "Cart")'" class="card-button">SİPARİŞ VER</button>
            </div>
        </div>
        <div class="card-2">
            <img src="/img/kart-2.png" alt="İkinci Kart" />
            <div class="overlay-content">
                <h1 class="card-title">Hackhathlon <br />Burger Menu</h1>
                <button onclick="location.href='@Url.Action("CreateOrder", "Cart")'" class="card-button">SİPARİŞ VER</button>
            </div>
        </div>
        <div class="card-2">
            <img src="/img/kart-3.png" alt="Üçüncü Kart" />
            <div class="overlay-content">
                <h1 class="card-title">Çoooook hızlı npm gibi kurye</h1>
                <button onclick="location.href='@Url.Action("CreateOrder", "Cart")'" class="card-button">SİPARİŞ VER</button>
            </div>
        </div>
    </section>

    <section class="vitrin">
        <h3 class="secondary-title">en çok paketlenen menüler</h3>
        <h1 class="main-title">Acıktıran Kodlara Doyuran Lezzetler</h1>
        <div class="secondary-nav">
            <ul>
                <li><a asp-controller="Product" asp-action="Index" asp-route-categoryId="1"><img src="/img/icons/1.svg" alt="Kore" />YENİ! Kore</a></li>
                <li><a asp-controller="Product" asp-action="Index" asp-route-categoryId="2"><img src="/img/icons/2.svg" alt="Pizza" />Pizza</a></li>
                <li><a asp-controller="Product" asp-action="Index" asp-route-categoryId="3"><img src="/img/icons/3.svg" alt="Burger" />Burger</a></li>
                <li><a asp-controller="Product" asp-action="Index" asp-route-categoryId="4"><img src="/img/icons/4.svg" alt="Kızartmalar" />Kızartmalar</a></li>
                <li><a asp-controller="Product" asp-action="Index" asp-route-categoryId="5"><img src="/img/icons/5.svg" alt="Fast Food" />Fast Food</a></li>
                <li><a asp-controller="Product" asp-action="Index" asp-route-categoryId="6"><img src="/img/icons/6.svg" alt="Gazlı İçecek" />Gazlı İçecek</a></li>
            </ul>
        </div>
        <div class="vitrin-cards">
            <div class="vitrin-card-container">
                <img src="/img/food-1.png" alt="food-1" />
                <h4>Terminal Pizza</h4>
                <p>4.9 </p><p>(200)</p><p>60₺</p>
            </div>
            <div class="vitrin-card-container">
                <img src="/img/food-2.png" alt="food-2" />
                <h4>Position Absolute Acı Pizza</h4>
                <p>4.9 </p><p>(928)</p><p>85₺</p>
            </div>
            <div class="vitrin-card-container">
                <img src="/img/food-3.png" alt="food-3" />
                <h4>useEffect Tavuklu Burger</h4>
                <p>4.9 </p><p>(462)</p><p>75₺</p>
            </div>
        </div>
    </section>

    <footer>
        <img src="/img/logo-footer.svg" alt="Footer Logo" />
        <p>&copy; 2024 FoodOrderApp</p>
    </footer>
</main>
</body>
</html>

@model FoodOrderApp.Models.HomePageViewModel

<div
    style="background-image: url('/img/home-banner.png'); background-size: cover; background-position: center; width: 100%; height: 100vh; text-align: center; color: white; padding-top: 20px;">
    <img src="/img/logo.svg" alt="Logo" />
    <h1 class="main-title">KOD ACIKTIRIR <br /> PİZZA DOYURUR</h1>
    <button class="anasayfa-buton" data-cy="mainpage-button"
        onclick="location.href='@Url.Action("CreateOrder", "Cart")'">ACIKTIM</button>
</div>

<nav class="main-nav">
    <ul>
        @foreach (var category in Model.Categories)
        {
            <li>
                <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.CategoryId">
                    <img src="/img/@category.CategoryImage" alt="@category.CategoryName" />@category.CategoryName
                </a>
            </li>
        }
    </ul>
</nav>

<main class="main-page">
    <section class="cards">
        <div class="card-1">
            <img src="/img/kart-1.png" alt="İlk Kart" />
            <div class="overlay-content">
                <h1 class="card-title">Özel <br /> Lezzetus</h1>
                <p class="card-text">Position Absolute Acı Pizza</p>
                <button onclick="location.href='@Url.Action("CreateOrder", "Cart")'" class="card-button">SİPARİŞ
                    VER</button>
            </div>
        </div>
        <div class="card-2">
            <img src="/img/kart-2.png" alt="İkinci Kart" />
            <div class="overlay-content">
                <h1 class="card-title">Hackhathlon <br />Burger Menu</h1>
                <button onclick="location.href='@Url.Action("CreateOrder", "Cart")'" class="card-button">SİPARİŞ
                    VER</button>
            </div>
        </div>
        <div class="card-2">
            <img src="/img/kart-3.png" alt="Üçüncü Kart" />
            <div class="overlay-content">
                <h1 class="card-title">Çoooook hızlı npm gibi kurye</h1>
                <button onclick="location.href='@Url.Action("CreateOrder", "Cart")'" class="card-button">SİPARİŞ
                    VER</button>
            </div>
        </div>
    </section>

    <section class="vitrin">
        <h3 class="secondary-title">en çok paketlenen menüler</h3>
        <h1 class="main-title">Acıktıran Kodlara Doyuran Lezzetler</h1>
        <div class="secondary-nav">
            <ul>
                @foreach (var category in Model.Categories)
                {
                    <li>
                        <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.CategoryId"
                            class="category-link">
                            <img src="/img/@category.CategoryImage" alt="@category.CategoryName" />@category.CategoryName
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="vitrin-cards">
            @foreach (var product in Model.Products)
            {
                <div class="vitrin-card-container">
                    <img src="/img/@product.ProductImage" alt="food-img" />
                    <h4>@product.ProductName</h4>
                    <p>@product.Rating </p>
                    <p> (@product.OrderProducts.Count)</p>
                    <p>@product.Price₺</p>
                </div>
            }
        </div>
    </section>

    <footer>
        <p>&copy; 2024 FoodOrderApp</p>
    </footer>
</main>
